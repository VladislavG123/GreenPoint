@page "/stat/users"
@model GreenPoint.Dotnet.WebAdmin.Pages.UserStatisticPage

<!-- Data Table JS
============================================ -->
<link rel="stylesheet" href="css/jquery.dataTables.min.css">

<!-- Breadcomb area Start-->
<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-form"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Статистика пользователей</h2>
                                    <p>Просмотр активностей пользоателей</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcomb area End-->


<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="basic-tb-hd">
                        <h2>Список всех пользователей</h2>
                        <p>Пользователи сервиса</p>
                    </div>
                    <div class="table-responsive">
                        <table id="data-table-basic" class="table table-striped">
                            <thead>
                            <tr>
                                <th>Email</th>
                                <th>Псевдоним</th>
                                <th>Рейтинг</th>
                                <th>Изменение рейтинга за неделю</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.Email</td>
                                    <td>@user.Username</td>
                                    <td>@user.Rating</td>
                                    <td>@user.IncreasedRating</td>
                                </tr>
                            }
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>Email</th>
                                <th>Псевдоним</th>
                                <th>Рейтинг</th>
                                <th>Изменение рейтинга за неделю</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <!-- Data Table JS
    ============================================ -->
    <script src="js/data-table/jquery.dataTables.min.js"></script>
    <script src="js/data-table/data-table-act.js"></script>
}