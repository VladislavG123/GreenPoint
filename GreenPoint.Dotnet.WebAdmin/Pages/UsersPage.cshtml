@page "/users"
@model GreenPoint.Dotnet.WebAdmin.Pages.UsersPage


<!-- Breadcomb area Start-->
<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-form"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Управление пользователями</h2>
                                    <p>Список пользователей</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcomb area End-->

<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="basic-tb-hd">
                        <h2>Список всех пользователей</h2>
                        <p>Пользователи сервиса</p>
                    </div>
                    <div class="table-responsive">
                        <table id="data-table-basic" class="table table-striped">
                            <thead>
                            <tr>
                                <th>Аватар</th>
                                <th>Email</th>
                                <th>Псевдоним</th>
                                <th>Дата создания</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>
                                        <img src="@Model.Avatars.FirstOrDefault(x => x.Id == user.AvatarId)?.Url"
                                             style="max-height: 40px;" alt="@user.Id.ToString()">
                                    </td>
                                    <td>@user.Email</td>
                                    <td>@user.Username</td>
                                    <td>@user.CreationDate.ToString("dd.MM.yyyy")</td>
                                </tr>
                            }
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>Аватар</th>
                                <th>Emails</th>
                                <th>Псевдоним</th>
                                <th>Дата создания</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>