@page "/statuses"
@model GreenPoint.Dotnet.WebAdmin.Pages.StatusesPage


<!-- Breadcomb area Start-->
<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-form"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Управление статусами пользователей</h2>
                                    <p>Создание, просмотр и удаление статусов</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcomb area End-->

<div class="container">
    @if (ViewData["Error"] is not null)
    {
        <div class="alert alert-danger my-1 w-25 mx-auto" role="alert">
            @ViewData["Error"]
        </div>
    }

    <div class="row">
        <form method="post" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="form-example-wrap mg-t-30">
                <div class="cmp-tb-hd cmp-int-hd">
                    <h2>Создание статуса</h2>
                </div>
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                        <div class="form-example-int form-example-st">
                            <div class="form-group">
                                <div class="nk-int-st">
                                    <input name="name" required type="text" class="form-control input-sm" placeholder="Название статуса">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                        <div class="form-example-int form-example-st">
                            <div class="form-group">
                                <div class="nk-int-st">
                                    <input name="min" required type="number" class="form-control input-sm" placeholder="Минимальное значение">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                        <div class="form-example-int form-example-st">
                            <div class="form-group">
                                <div class="nk-int-st">
                                    <input name="max" required type="number" class="form-control input-sm" placeholder="Максимальное значение">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                        <div class="form-example-int">
                            <button class="btn btn-success notika-btn-success waves-effect">Создать</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>

<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="basic-tb-hd">
                        <h2>Список всех статусов</h2>
                        <p>Создание, просмотр и удаление статусов</p>
                    </div>
                    <div class="table-responsive">
                        <table id="data-table-basic" class="table table-striped">
                            <thead>
                            <tr>
                                <th>Название</th>
                                <th>Минимум</th>
                                <th>Максимум</th>
                                <th>Дата создания</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var status in Model.Statuses)
                            {
                                <tr>
                                    <td>@status.Name</td>
                                    <td>@status.MinValue</td>
                                    <td>@status.MaxValue</td>
                                    <td>@status.CreationDate.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <a href="/statuses/remove/@status.Id">Удалить</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>Название</th>
                                <th>Минимум</th>
                                <th>Максимум</th>
                                <th>Дата создания</th>
                                <th></th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>