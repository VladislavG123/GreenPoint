@page "/avatars"
@model AvatarPage


<!-- Breadcomb area Start-->
<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-form"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Управление аватарами пользователей</h2>
                                    <p>Создание, просмотр и удаление аватаров</p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcomb area End-->

<div class="container">
    
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="form-example-wrap mg-t-30">
            <div class="cmp-tb-hd cmp-int-hd">
                <h2>Добавление аватара</h2>
            </div>
            <form method="post" class="row" enctype="multipart/form-data">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                    <div class="form-example-int form-example-st">
                        <div class="form-group">
                            <div class="nk-int-st">
                                <input name="formFile" type="file" placeholder="Новый аватар">
                            </div>
                        </div>
                    </div>
                </div>
               
                <div class="col-lg-4 col-md-4 col-sm-3 col-xs-12">
                    <div class="form-example-int">
                        <button class="btn btn-success notika-btn-success waves-effect">Загрузить</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

</div>

<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="basic-tb-hd">
                        <h2>Список всех аватаров</h2>
                        <p>Создание, просмотр и удаление аватаров</p>
                    </div>
                    <div class="table-responsive">
                        <table id="data-table-basic" class="table table-striped">
                            <thead>
                            <tr>
                                <th>Аватар</th>
                                <th>Дата создания</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var avatar in Model.Avatars)
                            {
                                <tr>
                                    <td>
                                        <img src="@avatar.Url" style="max-height: 40px;" alt="@avatar.Id.ToString()">
                                    </td>
                                    <td>@avatar.CreationDate.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <a href="/avatars/remove/@avatar.Id">Удалить</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>Аватар</th>
                                <th>Дата создания</th>
                                <th></th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>